@{
    Layout = null;

}
@model CheckViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/Check.css" rel="stylesheet">
    <title>移动点巡检</title>
</head>

<body>
    <header>
        <nav class=" fixed-top bg-white">
            <div class=" head_title  text-center">
                <span class="font-weight-bold"></span>
            </div>
        </nav>
    </header>

    <form asp-action="SentCheck" asp-controller="Check" method="post">
        <div class=" bg-light info">
            <div class="info_u">
                <div class="input-group">

                    <input type="text" class="form-control rounded-0 border-0 bg-light" placeholder="具体信息" id="usr"
                           name="username" readonly>
                </div>

                <div class="input-group flex-nowrap info_item">
                    <div class="input-group-prepend ">
                        <span class="input-group-text bg-white rounded-0 border-0">设备编号</span>
                    </div>
                    <input type="text" class="form-control border-0" id="input_code" placeholder="请输入单据编号" asp-for="CreatNumber" value="@Model.CreatNumber">
                </div>

                <div class="input-group flex-nowrap info_item">
                    <div class="input-group-prepend ">
                        <span class="input-group-text bg-white rounded-0 border-0" id="addon-wrapping">设备名称</span>
                    </div>
                    <input type="text" class="form-control border-0" placeholder="请输入设备名称" value="@Model.EquName"
                           aria-describedby="addon-wrapping" asp-for="EquName">
                </div>

                <div class="input-group flex-nowrap info_item">
                    <div class="input-group-prepend ">
                        <span class="input-group-text bg-white rounded-0 border-0" id="addon-wrapping">检测部位</span>
                    </div>
                    <input type="text" class="form-control border-0" placeholder="请输入检测部位"
                           aria-describedby="addon-wrapping" asp-for="CheckAreas">
                </div>
                <div class="input-group flex-nowrap info_item">
                    <div class="input-group-prepend ">
                        <span class="input-group-text bg-white rounded-0 border-0" id="addon-wrapping">检测结果</span>
                    </div>
                    <input type="text" class="form-control border-0" placeholder="请输入检测结果" asp-for="CheckResult"
                           aria-describedby="addon-wrapping">
                </div>

                <div class="input-group mb-3 info_item">
                    <div class="input-group-prepend">
                        <label class="input-group-text bg-white rounded-0 border-0">检测类别</label>
                    </div>
                    <select class="custom-select rounded-0 border-0" asp-for="CheckStatus">

                        <option value="日常点检" selected>日常点检</option>
                        <option value="设备月检">设备月检</option>
                        <option value="其他巡检">其他巡检</option>
                    </select>
                    <span asp-validation-for="CheckStatus"></span>
                </div>
            </div>

            <div class=" info_m ">
                <div class="input-group flex-nowrap info_item">
                    <div class="input-group-prepend ">
                        <span class="input-group-text bg-white rounded-0 border-0" id="addon-wrapping">检测周期</span>
                    </div>
                    <input type="text" class="form-control border-0" placeholder="请输入检测周期" asp-for="CheckCyc"
                           aria-describedby="addon-wrapping">
                </div>
                <div class="input-group flex-nowrap info_item">
                    <div class="input-group-prepend ">
                        <span class="input-group-text bg-white rounded-0 border-0" id="addon-wrapping">检测时间</span>
                    </div>
                    <input class="form-control border-0" placeholder="请输入检测时间"
                           aria-describedby="addon-wrapping" asp-for="CheckStartTime" value="@DateTime.Now.ToLocalTime()">
                </div>
            </div>

            <!-- <div class=" info_m ">

                <div class="input-group flex-nowrap info_item">
                    <div class="input-group-prepend ">
                        <span class="input-group-text bg-white rounded-0 border-0" id="addon-wrapping">维修起始</span>
                    </div>
                    <input type=" time" class="form-control border-0" placeholder="请输入维修开始时间" aria-label="Username"
                        aria-describedby="addon-wrapping">
                </div>
                <div class="input-group flex-nowrap info_item">
